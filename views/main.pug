doctype html
html
  head
    meta(charset='utf-8')
    title # Main
    // Main CSS
    link(rel='stylesheet', href='../css/main.css')
    // Bootstrap CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css', integrity='sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb', crossorigin='anonymous')
    // Google Material Icon CDN
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    // Responsive Meta Tag
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  body
    .main_container
      .game_list_container
        .game_list_home
          i.material-icons people
        .friends_online
          | 1명 접속 중
        .seperator
        //- .game_list
        each game_list in game_lists
          div(class= ("game_list"))
            - rid = encodeURIComponent(game_list['@rid'])
            img(src=game_list.game_image class= ("game_list_logo"))/
        // Game_list_add
        .game_list_add
            i.material-icons add
        // Seperator
        .seperator
      .channel_list
        .channel_name
          h1.channe_name_data Game Name
          .channel_dropdown
            i.material-icons keyboard_arrow_down
        .channel_box
          h1.name 로 그 인 완 료
        .channel_profile
          .profile_image
          .profile_info
            span.username 상구미
            span.database_code #01
          .control_box
            .control_box_layout
              i.material-icons mic
              i.material-icons headset
              i.material-icons settings
      .chat_box
      .friend_list
    // Bootstrap
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js', integrity='sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js', integrity='sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ', crossorigin='anonymous')
